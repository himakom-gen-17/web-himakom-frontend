<script>
    const containers = document.querySelectorAll(".content-box");

    // Toggle class "active" pada elemen yang di klik
    containers.forEach((container) => {
        container.addEventListener("click", () => {
            container.classList.toggle("active");

            // Cek jika elemen lain aktif, jika ya hapus class "active"
            containers.forEach((openContainer) => {
                if (openContainer !== container) {
                    openContainer.classList.remove("active");
                }
            });
        });
    });
</script>

